<Window x:Class="GymApp.View.SuccessView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymApp.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        Title="SuccessView" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Assets/SuccessIcon.jpeg" Width="90" Height="90" Margin="0,20,0,0" Stretch="Uniform"/>
            <TextBlock Text="{Binding SuccessMessage}" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="Green" 
                       Margin="20,0,20,0"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding MemberID}" 
                        FontSize="18" 
                        FontWeight="Bold" 
                        Foreground="Black" 
                        Margin="20,0,20,0"
                        HorizontalAlignment="Center"/>
            <Button
                Content="Ok"
                Background="Green"
                Foreground="White"
                FontWeight="Bold"
                FontSize="16"
                Click="Close_Click"
                Width="60"
                Height="40"
                Margin="10"
                />


        </StackPanel>
    </Grid>
</Window>
