    <Window x:Class="GymApp.View.AddNewMemberPage"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:GymApp.View"
            xmlns:converter="clr-namespace:GymApp.Converter"
            mc:Ignorable="d"
            Title="Dodaj novog clana" Height="400" Width="800">
    <Window.Resources>
        <converter:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <!-- Style for error message -->
        <Style x:Key="ErrorMessageStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>
    </Window.Resources>
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Podaci o novom clanu" FontSize="24" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1"  HorizontalAlignment="Center" Width="300" >

            <TextBlock Text="Ime:" FontWeight="Bold" Margin="0 10 0 5"/>
            <TextBox x:Name="FirstnameTextBox" Text="{Binding FirstName}" Foreground="Gray" VerticalContentAlignment="Center" Height="30" GotFocus="FirstnameTextBox_GotFocus" LostFocus="FirstnameTextBox_LostFocus"/>

            <TextBlock Text="Prezime:" FontWeight="Bold" Margin="0 10 0 5"/>
            <TextBox x:Name="LastnameTextBox" Text="{Binding LastName}" Foreground="Gray" VerticalContentAlignment="Center" Height="30" GotFocus="LastnameTextBox_GotFocus" LostFocus="LastnameTextBox_LostFocus"/>


            
            <TextBlock Text="Email:" FontWeight="Bold" Margin="0 10 0 5"/>
            <TextBox x:Name="EmailTextBox" Text="{Binding Email}" VerticalContentAlignment="Center" Foreground="Gray" Height="30" GotFocus="EmailTextBox_GotFocus" LostFocus="EmailTextBox_LostFocus"/>

            <TextBlock Text="{Binding ErrorMessage}" Style="{StaticResource ErrorMessageStyle}" Visibility="{Binding PasswordError, Converter={StaticResource NullToVisibilityConverter}}" />

            <Button Content="Dodaj"
                    Height="35"
                    Width="100"
                    Margin="0 20 0 0"
                    HorizontalAlignment="Center"
                    Background="Green"
                    FontWeight="Bold"
                    Command="{Binding AddNewMemberCommand}"
                    />
        </StackPanel>
    </Grid>
</Window>
